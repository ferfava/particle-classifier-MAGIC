colnames(data) <- c("fLength", "fWidth", "fSize", "fConc", "fConc1",
"fAsym", "fM3Long", "fM3Trans", "fAlpha", "fDist", "class")
# Convertir clase a factor (binaria: 'g' y 'h')
data$class <- as.factor(data$class)
